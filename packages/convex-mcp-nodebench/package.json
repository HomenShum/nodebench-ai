  },
  "license": "MIT",
  "author": "HomenShum",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "better-sqlite3": "^11.0.0"
  },
  "optionalDependencies": {
    "@google/genai": "^1.10.0",
    "openai": "^5.8.2"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.0",
